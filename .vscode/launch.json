    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Scraper",
            "args": [
                "${workspaceRoot}/src/scraper/ChitasScraper.ts"
            ],
            "sourceMaps": true,
            "protocol": "inspector",
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
        },
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/src/index.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        }
    ]
}